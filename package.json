{
  "name": "css-tokens",
  "version": "0.0.1",
  "description": "A npm package offering a curated collection of CSS variables for effortless frontend development, enabling consistent design across UI components and swift global style adjustments",
  "main": "index.js",
  "scripts": {
    "build": "postcss src/css-tokens.css --dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boguz/css-tokens.git"
  },
  "keywords": [
    "css",
    "variables",
    "frontend",
    "tokens",
    "design",
    "styles"
  ],
  "author": "LuisPato",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boguz/css-tokens/issues"
  },
  "homepage": "https://github.com/boguz/css-tokens#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.28",
    "postcss-import": "^15.1.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-csstree-validator": "^3.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-csstree-validator"
    ],
    "rules": {
      "csstree/validator": true,
      "rule-empty-line-before": null,
      "selector-class-pattern": null
    }
  }
}
